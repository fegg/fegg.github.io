---
import { name } from "spectre:globals";
import Icon from "./Icon.astro";
---

<nav>
  <div class="nav-container">
    <a class="site-title" href="/">{name}</a>
    <div class="nav-links">
      <a href="/about/">About</a>
      <a
        href="https://github.com/fegg"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
      >
        <Icon type="lucide" name="github" width={20} height={20} />
      </a>
      <a href="/index.xml" aria-label="RSS Feed">
        <Icon type="lucide" name="rss" width={20} height={20} />
      </a>

      <button
        id="theme-toggle"
        class="theme-toggle-btn"
        aria-label="Toggle Theme"
      >
        <div class="toggle-icon-viewport">
          <div class="toggle-icon-wrapper">
            <div class="sun-icon-box">
              <Icon
                type="lucide"
                name="sun"
                width={20}
                height={20}
                stroke-width={2.5}
              />
            </div>
            <div class="moon-icon-box">
              <Icon
                type="lucide"
                name="moon"
                width={20}
                height={20}
                stroke-width={2.5}
              />
            </div>
          </div>
        </div>
      </button>

      <div class="search-container">
        <input id="search" type="text" placeholder="Search" />
        <div id="search-results"></div>
      </div>
    </div>
  </div>
</nav>

<script is:inline>
  // Theme logic
  const themeToggle = document.querySelector("#theme-toggle");
  const htmlElement = document.documentElement;

  const getInitialTheme = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  };

  const currentTheme = getInitialTheme();
  htmlElement.setAttribute("data-theme", currentTheme);

  themeToggle?.addEventListener("click", () => {
    const theme =
      htmlElement.getAttribute("data-theme") === "dark" ? "light" : "dark";
    htmlElement.setAttribute("data-theme", theme);
    localStorage.setItem("theme", theme);
  });
</script>

<script is:inline>
  const searchElement = document.querySelector("#search");
  const results = document.querySelector("#search-results");
  let focusIndex = -1;
  let pagefindInitialized = false;

  // Keyboard shortcuts
  document.addEventListener("keydown", (e) => {
    if (e.key === "k" && (e.ctrlKey || e.metaKey)) {
      e.preventDefault();
      searchElement.focus();
    }

    if (e.key === "Escape") {
      searchElement.blur();
      results.classList.remove("active");
      focusIndex = -1;
    }

    if (e.key === "ArrowDown" && results.classList.contains("active")) {
      e.preventDefault();
      focusIndex++;
      const resultLinks = document.querySelectorAll("#search-results a");
      if (focusIndex >= resultLinks.length) focusIndex = 0;
      resultLinks[focusIndex]?.focus();
    }

    if (e.key === "ArrowUp" && results.classList.contains("active")) {
      e.preventDefault();
      focusIndex--;
      const resultLinks = document.querySelectorAll("#search-results a");
      if (focusIndex < 0) focusIndex = resultLinks.length - 1;
      resultLinks[focusIndex]?.focus();
    }
  });

  // Search functionality
  searchElement?.addEventListener("focus", async () => {
    results.classList.add("active");
    if (!pagefindInitialized) {
      try {
        window.pagefind = await import("/pagefind/pagefind.js");
        await window.pagefind.init();
        pagefindInitialized = true;
      } catch (error) {
        console.error("Failed to initialize Pagefind:", error);
      }
    }
  });

  searchElement?.addEventListener("blur", () => {
    setTimeout(() => {
      if (!document.activeElement?.closest("#search-results")) {
        results.classList.remove("active");
        focusIndex = -1;
      }
    }, 200);
  });

  searchElement?.addEventListener("input", async (e) => {
    if (!pagefindInitialized) return;

    results.innerHTML = "";
    const search = await window.pagefind.search(e.target.value);

    if (search.results.length === 0 && e.target.value.length > 0) {
      results.innerHTML = '<p class="no-results">No results found</p>';
    } else {
      let html = "";
      for (let i = 0; i < search.results.length; i++) {
        const data = await search.results[i].data();
        html += `
          <a href="${data.url}">
            <h4>${data.meta.title}</h4>
            <p>${data.excerpt}</p>
          </a>
        `;
      }
      results.innerHTML = html;
    }
    results.classList.add("active");
  });
</script>

<style>
  nav {
    background-color: var(--color-bg-primary);
    border-bottom: 1px solid var(--color-border-light);
    padding: var(--space-4) 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: var(--layout-max-width);
    margin: 0 auto;
    padding: 0 var(--space-6);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text-primary);
    text-decoration: none;
    font-family: var(--font-serif);
  }

  .site-title:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }

  .nav-links a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: color var(--transition-fast);
    display: flex;
    align-items: center;
  }

  .nav-links a:hover {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  /* Refined Compact Toggle */
  .theme-toggle-btn {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: background-color var(--transition-fast);
    width: 24px; /* Slightly larger hit area */
    height: 24px;
  }

  .theme-toggle-btn:hover {
    background-color: var(--color-bg-secondary);
  }

  .toggle-icon-viewport {
    width: 20px;
    height: 20px;
    overflow: hidden;
    position: relative;
    pointer-events: none;
  }

  .toggle-icon-wrapper {
    display: flex;
    flex-direction: column;
    width: 20px;
    height: 40px; /* Crucial: 2 * 20px */
    transition: transform 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }

  :global([data-theme="dark"]) .toggle-icon-wrapper {
    transform: translateY(-20px);
  }

  .sun-icon-box,
  .moon-icon-box {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  /* GitHub-like Saturated Colors */
  .sun-icon-box :global(svg) {
    color: #eab308; /* Saturated Yellow-600 */
    fill: #eab308;
    fill-opacity: 0.2;
  }

  .moon-icon-box :global(svg) {
    color: #4f46e5; /* Saturated Indigo-600 */
    fill: #4f46e5;
    fill-opacity: 0.2;
  }

  .theme-toggle-btn:active .toggle-icon-wrapper {
    transition-duration: 0.2s;
  }

  .search-container {
    position: relative;
    margin-left: var(--space-2);
  }

  #search {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text-primary);
    padding: 0.4rem 0.75rem;
    font-size: var(--font-size-sm);
    width: 140px;
    outline: none;
    transition: all var(--transition-base);
    border-radius: 4px;
  }

  #search:focus {
    border-color: var(--color-accent);
    background-color: var(--color-bg-primary);
    width: 200px;
  }

  #search::placeholder {
    color: var(--color-text-muted);
  }

  #search-results {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    display: none;
    width: 350px;
    max-width: 90vw;
    max-height: 400px;
    overflow-y: auto;
    z-index: 100;
    box-shadow: var(--shadow-md);
    border-radius: 4px;
  }

  #search-results.active:has(*) {
    display: block;
  }

  @media screen and (max-width: 768px) {
    .nav-container {
      padding: 0 var(--space-4);
    }

    .nav-links {
      gap: var(--space-4);
    }

    .nav-links a:not(:has(svg)) {
      display: none;
    }
  }
</style>

<style is:global>
  #search-results a {
    display: block;
    padding: var(--space-4);
    color: var(--color-text-primary);
    text-decoration: none;
    border-bottom: 1px solid var(--color-border-light);
  }

  #search-results a:last-child {
    border-bottom: none;
  }

  #search-results a:hover,
  #search-results a:focus {
    background-color: var(--color-bg-secondary);
    outline: none;
  }

  #search-results h4 {
    margin: 0 0 0.25rem 0;
    font-size: var(--font-size-sm);
    font-weight: 600;
  }

  #search-results p {
    margin: 0;
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    line-height: var(--line-height-tight);
  }

  #search-results mark {
    background-color: #fff9c4;
    color: #444;
    padding: 0 0.125rem;
  }

  #search-results .no-results {
    padding: var(--space-4);
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    margin: 0;
  }
</style>
