---
interface Props {
    prevUrl?: string;
    nextUrl?: string;
    class?: string;
}

const { prevUrl, nextUrl, class: className } = Astro.props;
---

<div class:list={["pagination-wrapper", className]}>
    {
        prevUrl ? (
            <a href={prevUrl} class="pagination-link prev">
                ← Newer Posts
            </a>
        ) : (
            <span class="pagination-link disabled">← Newer Posts</span>
        )
    }

    {
        nextUrl ? (
            <a href={nextUrl} class="pagination-link next">
                Older Posts →
            </a>
        ) : (
            <span class="pagination-link disabled">Older Posts →</span>
        )
    }
</div>

<style>
    .pagination-wrapper {
        display: flex;
        justify-content: space-between;
        gap: var(--spacing-md);
        width: 100%;
    }

    .pagination-link {
        color: var(--color-text-secondary);
        text-decoration: none;
        font-size: 0.9375rem;
        transition: all var(--transition-base);
    }

    .pagination-link:not(.disabled):hover {
        color: var(--color-accent);
    }

    .pagination-link.disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }

    .pagination-link.prev {
        text-align: left;
    }

    .pagination-link.next {
        text-align: right;
        margin-left: auto;
    }

    /* Hide header pagination on mobile */
    @media (max-width: 768px) {
        .pagination-wrapper.header-pagination-nav {
            display: none;
        }
    }
</style>
